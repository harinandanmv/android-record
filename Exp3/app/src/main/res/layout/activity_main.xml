            android:text="90"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Science"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
